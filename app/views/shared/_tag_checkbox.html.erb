<div class = "tag">
<div class = "tag_container">

  <%= form_for @tag do |f| %>
      <div class='form-group'>
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
              <div class='form-check'>
                  <%= tag.label class: 'form-check-label' do %>

                      <%= tag.check_box class: 'form-check-input' %>

                      <%= tag.text %>
                  <% end %>
              </div>
          <% end %>
      </div>

      <%= f.submit '保存する！', class: 'btn btn-primary' %>
  <% end %>

</div>
</div>



<%= form_for(@subject_post.tag) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field" "フィードバック">
    <%= f.text_area :content, placeholder: "フィードバックを書いてください" %>
  </div>
<%= f.hidden_field :reply_post_id, value: @reply_post.id %>
  <%= f.submit "タグの登録をする！", class: "btn btn-primary" %>
<% end %>
