
<li id="feedback_post-<%= feedback_post.id %>">
  <%= link_to gravatar_for(reply_post.user, size: 50), reply_post.user %>
  <span class="user"><%= link_to reply_post.user.name, reply_post.user %></span>
  <span class="content"><%= reply_post.content %></span>
  <span class="timestamp">

  <%= time_ago_in_words(reply_post.created_at) %>前

  <% if current_user?(feedback_post.user) %>
    <%= link_to "消去", feedback_post, method: :delete,
        data: { confirm: "本当に消去してもいいですか？" } %>
  <% end %>

  </span>
</li>
