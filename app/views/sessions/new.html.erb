<% provide(:title, "Log in") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 form_container">
    
    <h1>ログイン</h1>

    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control', id: 'session_email'%>

      <%= f.label :password, "パスワード" %>
      <%= link_to "(パスワードを忘れた)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control', id: 'session_password' %>

      <div class = "form_save">
        <%= f.submit "ログインする！", class: "btn custom_button" %>
      </div>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :パスワードを記憶する %>
        <span>パスワードを記憶する</span>
      <% end %>

    <p><%= link_to "いますぐ始める！", signup_path, {class: "main-menu"} %></p>
    <% end %>

  </div>
</div>
